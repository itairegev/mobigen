<?xml version="1.0"?>
<clickhouse>
    <!-- Custom configuration for Mobigen analytics -->

    <!-- Compression settings -->
    <compression>
        <case>
            <method>zstd</method>
            <level>3</level>
        </case>
    </compression>

    <!-- Query complexity limits -->
    <profiles>
        <default>
            <max_memory_usage>10000000000</max_memory_usage>
            <max_bytes_before_external_group_by>8000000000</max_bytes_before_external_group_by>
            <max_execution_time>300</max_execution_time>
        </default>
    </profiles>

    <!-- Users -->
    <users>
        <mobigen>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
        </mobigen>
    </users>
</clickhouse>
