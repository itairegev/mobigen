{
  "template": "news",
  "templateReason": "",
  "techStack": [],
  "dataModels": [
    {
      "name": "Article",
      "fields": {
        "id": "string (primary key)",
        "title": "string (indexed)",
        "content": "text",
        "summary": "string",
        "author": "string",
        "publishedAt": "datetime (indexed)",
        "category": "string (indexed)",
        "imageUrl": "string?",
        "sourceUrl": "string",
        "readingTime": "number",
        "tags": "string[]",
        "isBookmarked": "boolean",
        "isRead": "boolean",
        "createdAt": "datetime",
        "updatedAt": "datetime"
      },
      "relationships": [
        {
          "type": "one-to-many",
          "related": "BookmarkedArticle",
          "foreignKey": "articleId"
        }
      ],
      "indexes": [
        "category",
        "publishedAt",
        "title",
        "tags"
      ]
    },
    {
      "name": "BookmarkedArticle",
      "fields": {
        "id": "string (primary key)",
        "articleId": "string (foreign key)",
        "bookmarkedAt": "datetime",
        "isDownloaded": "boolean",
        "downloadPath": "string?"
      },
      "relationships": [
        {
          "type": "many-to-one",
          "related": "Article",
          "foreignKey": "articleId"
        }
      ],
      "indexes": [
        "articleId",
        "bookmarkedAt"
      ]
    },
    {
      "name": "SearchHistory",
      "fields": {
        "id": "string (primary key)",
        "query": "string (indexed)",
        "category": "string?",
        "searchedAt": "datetime",
        "resultCount": "number"
      },
      "indexes": [
        "query",
        "searchedAt"
      ]
    },
    {
      "name": "UserPreferences",
      "fields": {
        "id": "string (primary key)",
        "theme": "string (light|dark|system)",
        "defaultCategory": "string?",
        "notificationsEnabled": "boolean",
        "autoDownloadBookmarks": "boolean",
        "preferredCategories": "string[]",
        "readingSpeed": "number"
      }
    },
    {
      "name": "Category",
      "fields": {
        "id": "string (primary key)",
        "name": "string",
        "slug": "string (indexed)",
        "description": "string?",
        "color": "string",
        "icon": "string",
        "isEnabled": "boolean",
        "sortOrder": "number"
      },
      "indexes": [
        "slug",
        "sortOrder"
      ]
    }
  ],
