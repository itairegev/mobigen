{
  "name": "@mobigen/tests",
  "version": "0.1.0",
  "private": true,
  "description": "Test suite for Mobigen platform",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:api": "vitest run --config vitest.config.ts tests/api/",
    "test:services": "vitest run --config vitest.config.ts tests/services/",
    "test:e2e": "vitest run --config vitest.config.ts tests/e2e/",
    "test:ui": "vitest run --config vitest.config.ts tests/ui/",
    "test:all": "vitest run --config vitest.config.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "socket.io-client": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
