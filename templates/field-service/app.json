{
  "expo": {
    "name": "Field Service Pro",
    "slug": "field-service-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e40af"
    },
    "assetBundlePatterns": ["**/*"],
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0,
      "checkAutomatically": "ON_LOAD",
      "url": "https://u.expo.dev"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mobigen.fieldservice",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show job sites near you",
        "NSCameraUsageDescription": "We need camera access to take job photos",
        "NSPhotoLibraryUsageDescription": "We need photo library access to upload job photos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e40af"
      },
      "package": "com.mobigen.fieldservice",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-updates",
      "expo-image-picker",
      "expo-location"
    ]
  }
}
