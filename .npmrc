# Mobigen monorepo pnpm configuration

# Skip native postinstall scripts that fail on server environments
# These are only needed when building the actual React Native apps
neverBuiltDependencies[]=react-native-screens
neverBuiltDependencies[]=react-native
neverBuiltDependencies[]=@react-native-community/cli
neverBuiltDependencies[]=react-native-gesture-handler
neverBuiltDependencies[]=react-native-reanimated

# Auto-install peers
auto-install-peers=true

# Hoist patterns for React Native compatibility
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@babel/*
public-hoist-pattern[]=babel-*

# Shamefully hoist for better RN compatibility in templates
shamefully-hoist=true
